<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.max.navdrawer.TabbedActivity$PlaceholderFragment"
    android:padding="0dp">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewNoTrAnswer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:divider="?attr/colorPrimary"
        android:dividerHeight="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Нет подходящих маршрутов без пересадок!"
        android:id="@+id/textViewNull"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="49dp"
        android:visibility="invisible" />
</RelativeLayout>
